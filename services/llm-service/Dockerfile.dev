FROM node:18-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Create temp uploads directory
RUN mkdir -p temp-uploads

# Expose port
EXPOSE 3007

# Start the service
CMD ["npm", "run", "dev"]
